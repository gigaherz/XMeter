<Window x:Class="XMeter2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XMeter2"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="" WindowStyle="None" ResizeMode = "CanResize" ShowInTaskbar="False" Height="240" Width="480"  FontSize="0.12in"
        Closing="Window_Closing" SizeChanged="Window_SizeChanged" Deactivated="Window_Deactivated">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Start on Logon" IsCheckable="True" Name="mnuStartOnLogon" Click="StartOnLogon_Click"/>
            <MenuItem Header="Transparency" Name="mnuTransparency">
                <MenuItem Header="10" Click="Opacity10_Click"/>
                <MenuItem Header="30" Click="Opacity30_Click"/>
                <MenuItem Header="50" Click="Opacity50_Click"/>
                <MenuItem Header="90" Click="Opacity90_Click"/>
                <MenuItem Header="Opaque" Click="Opaque_Click"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Exit" Click="Exit_Click"/>
        </ContextMenu>
    </Window.ContextMenu>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="lbMaxSpeed" Content="0 Bytes/s" Padding="4,2" />
        <Label x:Name="lbMinSpeed" Content="0 Bytes/s" Padding="4,2" Grid.Row="2" />

        <Border Grid.Column="1" Margin="0" Grid.RowSpan="3" Grid.ColumnSpan="4">
            <Canvas Name="picGraph" Background="Black" />
        </Border>
        <Label x:Name="lbStartTime" Content="Start Time" Padding="0,2" Grid.Column="1" Grid.Row="3" />
        <Label x:Name="lbEndTime" Content="End time" Padding="0,2,4,2" Grid.Column="3" Grid.Row="3" HorizontalContentAlignment="Right" />

        <Border Grid.Row="3" Grid.Column="2" BorderBrush="Black" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="lbUpSpeed" Content="0 Bytes/s" Padding="2" Margin="0,0,3,0" HorizontalContentAlignment="Right" />
                <Label x:Name="lbDownSpeed" Content="0 Bytes/s" Padding="2" Margin="3,0,0,0" Grid.Column="1" />
            </Grid>
        </Border>

    </Grid>
</Window>
